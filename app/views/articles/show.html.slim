- @page_class= "#{@category.name.parameterize} type-section"
- @title= @category.name

.container
  #main
    article.entry role='main'
      .entry-metadata
        time = l @article.published_at

      header
        h1.entry-title = @article.title
        h2.summary = @article.summary

      .entry-content
        - if @article.image?
          .photo
            = img @article.image.regular
        = simple_format @article.body


  #sidebar
    section#more-articles
      section.category
        h1 = @category.name

        = render partial: 'related_articles', collection: @related_articles

    = render 'shared/send_news'
